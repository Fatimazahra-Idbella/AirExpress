
@{
    ViewData["Title"] = "Accueil - Réservation de Vols";
}

<!-- Hero Section -->
<div class="hero-section bg-primary text-white py-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold mb-4">Bienvenue sur AirExpress</h1>
        <p class="lead mb-4">Réservez vos vols en toute simplicité</p>
        <a href="/Vol" class="btn btn-light btn-lg px-4 me-2">Voir les vols</a>
        <a href="/Home/Privacy" class="btn btn-outline-light btn-lg px-4">En savoir plus</a>
    </div>
</div>

<!-- Features Section -->
<div class="container my-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-geo-alt fs-1 text-primary mb-3"></i>
                    <h3>Destinations mondiales</h3>
                    <p>Explorez plus de 200 destinations à travers le monde</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-credit-card fs-1 text-primary mb-3"></i>
                    <h3>Paiement sécurisé</h3>
                    <p>Transactions 100% sécurisées avec chiffrement SSL</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-headset fs-1 text-primary mb-3"></i>
                    <h3>Support 24/7</h3>
                    <p>Assistance client disponible à tout moment</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action -->
<div class="bg-light py-5">
    <div class="container text-center">
        <h2 class="mb-4">Prêt à voyager ?</h2>
        <a href="/Reservation" class="btn btn-primary btn-lg px-5">Réserver maintenant</a>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #0066cc 0%, #004080 100%);
        background-size: cover;
        min-height: 400px;
        display: flex;
        align-items: center;
    }
    
    .card {
        transition: transform 0.3s;
    }
    
    .card:hover {
        transform: translateY(-5px);
    }
</style>

<!-- Ajout des icônes Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">