@{
    ViewData["Title"] = "Ma Carte";
}

<!-- Partie HEAD : dans une section Styles -->
@section Styles {
    <link 
        rel="stylesheet" 
        href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
}

<!-- Partie BODY : dans le contenu principal -->
<div class="container mt-4">
    <div id="map" style="height: 500px; border: 1px solid #ddd; border-radius: 8px;"></div>
</div>

@section Scripts {
    <script 
        src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js">
    </script>
    
    <script>
        // Initialisation de la carte apr√®s chargement du DOM
        document.addEventListener('DOMContentLoaded', function() {
            const map = L.map('map').setView([48.8566, 2.3522], 13);
            
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a>'
            }).addTo(map);

            // Ajouter un marqueur (optionnel)
            L.marker([48.8566, 2.3522])
                .addTo(map)
                .bindPopup("Paris, France");
        });
    </script>
}